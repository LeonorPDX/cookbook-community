<h3><%= @recipe.name %></h3><br>
<%= @recipe.ingredients.gsub(/\n/, '<br/>') %><br><br>
<%= @recipe.directions.gsub(/\n/, '<br/>') %><br><br>
Recipe Type: <i><%= @recipe.type_tag %></i><br><br>
Created by: <a href="/<%= @user.slug %>"><%= @user.username %></a><br><br>

<% if current_user.recipes.include?(@recipe) %>
<form method="post" action="/remove/<%= @recipe.id %>">
  <input type="submit" value="Remove from my Cookbook">
</form>
<% else %>
<form method="post" action="/add/<%= @recipe.id %>">
  <input type="submit" value="Add to my Cookbook">
</form>
<% end %><br><br>

<a href="/recipes"><button type="button">Return to All Recipes</button></a><br><br>
<% if @recipe.user_id == current_user.id %>
<a href="/recipes/<%= @recipe.id %>/edit"><button type="button">Edit Recipe</button></a><br><br>
<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Recipe">
</form>
<% end %>